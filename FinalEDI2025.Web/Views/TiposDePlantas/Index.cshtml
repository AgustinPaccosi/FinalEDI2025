@{
}
@model IPagedList<TiposDePlantasListVM>
@using X.PagedList;

@{
    ViewData["Title"] = "Tipos De Plantas";
}
<div class="container">
    @Html.AntiForgeryToken()
    <div class="row mb-3 pb-2">
        <div class="col-6">
            <h3 style="color:#000000">Lista Tipos De Plantas</h3>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="TiposDePlantas" asp-action="UpSert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Nuevo
            </a>
        </div>
    </div>
    <table class="table table-bordered table-hover w-75  ">
        <thead>
            <tr>
                <th style="width:50%">Tipos</th>
                <th style="width:25%">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr id="@item.TipoPlantaId">
                        <td>
                            @item.Descripcion

                        </td>
                        <td>
                            <a class="btn btn-warning" asp-controller="TiposDePlantas" asp-action="UpSert" asp-route-id="@item.TipoPlantaId">
                                <i class="bi bi-pencil-square"></i>&nbsp;
                                Editar
                            </a>
                            <a onclick="Delete('TiposDePlantas/Delete/@item.TipoPlantaId',@item.TipoPlantaId,'@item.Descripcion')" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i>
                                Borrar
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">
                        Sin tipos Adheridos

                    </td>
                </tr>

            }
        </tbody>
    </table>
    <partial name="_Page" model="@Model" />


</div>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/Common.js"></script>
}